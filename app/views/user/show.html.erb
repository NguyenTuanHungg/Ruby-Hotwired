<div class="container mx-auto">
  <h1 class="text-3xl font-semibold my-4">User Details</h1>
  <div class="bg-white p-4 shadow-md rounded-lg">
    <p><strong>Name:</strong> <%= @user.name %></p>
    <p><strong>Mentor:</strong> <%= @user.mentor %></p>
    <p><strong>Skills:</strong> <%= @user.skills %></p>
    <p><strong>Time:</strong> <%= @user.time %></p>
    <p><strong>Payment:</strong> <%= @user.payment %></p>
    <p><strong>Status:</strong> <%= @user.status.humanize %></p>
    <p><strong>Created At:</strong> <%= @user.created_at.to_formatted_s(:long) %></p>
    <p><strong>Updated At:</strong> <%= @user.updated_at.to_formatted_s(:long) %></p>
  </div>
  <%= link_to 'Back', root_path, class: 'mt-4 inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>
</div>
